<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping>
    <class name="ru.job4j.todolist.model.TaskItem" table = "todotasks">
        <id name="id" column="id">
            <generator class = "identity"/>
        </id>
        <!--имена колонок должны совпадать с сеттерами в энтити-классе-->
        <property name="desc" column="description"/>
        <property name="created" column="create_date"/>
        <property name="done" column="task_is_done"/>
    </class>
</hibernate-mapping>