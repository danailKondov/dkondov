<web-app>
    <servlet>
        <servlet-name>EchoServlet</servlet-name>
        <servlet-class>ru.job4j.firstservletexp.servlets.EchoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateServlet</servlet-name>
        <servlet-class>ru.job4j.crud.servlets.CreateServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>ru.job4j.crud.servlets.DeleteServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>ru.job4j.crud.servlets.UpdateServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>DisplayServlet</servlet-name>
        <servlet-class>ru.job4j.crud.servlets.DisplayServlet</servlet-class>
        <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>ru.job4j.crud.servlets.SignInController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignOut</servlet-name>
        <servlet-class>ru.job4j.crud.servlets.SignOutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RoleEdit</servlet-name>
        <servlet-class>ru.job4j.crud.servlets.RoleEditController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCities</servlet-name>
        <servlet-class>ru.job4j.crud.servlets.UpdateCitiesController</servlet-class>
    </servlet>

    <filter>
        <filter-name>SignFilter</filter-name>
        <filter-class>ru.job4j.crud.filters.AuthFilter</filter-class>
    </filter>

    <servlet-mapping>
        <servlet-name>EchoServlet</servlet-name>
        <url-pattern>/echo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayServlet</servlet-name>
        <url-pattern>/display</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/sign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignOut</servlet-name>
        <url-pattern>/out</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RoleEdit</servlet-name>
        <url-pattern>/role</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCities</servlet-name>
        <url-pattern>/cities</url-pattern>
    </servlet-mapping>

    <filter-mapping>
        <filter-name>SignFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
</web-app>